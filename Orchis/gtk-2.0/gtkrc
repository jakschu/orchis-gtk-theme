	foreground[NORMAL] = @text_color
	foreground[PRELIGHT] = @text_color
	foreground[ACTIVE] = @selected_foreground
	foreground[SELECTED] = @selected_foreground
	foreground[INSENSITIVE] = darker (@foreground)
}

